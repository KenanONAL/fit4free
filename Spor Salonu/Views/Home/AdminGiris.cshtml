@model Spor_Salonu.ViewModel.adminModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>E-Ticaret Admin Paneli</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="@Url.Content("~/content/")css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/content/")css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/content/")css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/content/")css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="@Url.Content("~/content/")css/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="index2.html"><b>FITT 4</b> FREE</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg"><b>Yönetici Paneli</b></p>
            <div class="row">
                <div class="form-group">
                    <div class="col-xs-12">
                        @if (TempData["mesaj"] != null)
                        {
                            <div class="alert alert-warning">@TempData["mesaj"]</div>
                        }
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("AdminGiris", "Home", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    @Html.LabelFor(k => k.kullanici_adi)<br />
                    @Html.TextBoxFor(k => k.kullanici_adi, new { @class = "form-control",autocomplete = "off" })
                    @Html.ValidationMessageFor(k => k.kullanici_adi, null, new { @class = "text-danger"})
                </div>
                <div class="form-group has-feedback">
                    @Html.LabelFor(k => k.sifre)<br />
                    @Html.TextBoxFor(k => k.sifre, new { @class = "form-control",autocomplete = "off",@Type="password"})
                    @Html.ValidationMessageFor(k => k.sifre, null, new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <!-- /.col -->
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-flat">Giriş Yap</button>
                    </div>
                    <!-- /.col -->
                </div>

            }

        </div>
        
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="@Url.Content("~/content/")js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="@Url.Content("~/content/")js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="@Url.Content("~/content/")js/icheck.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });</script>
</body>
</html>
