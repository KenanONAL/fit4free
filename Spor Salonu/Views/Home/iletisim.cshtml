
@{
    ViewBag.Title = "iletisim";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(@Url.Content("~/content/")images/img_bg_2.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-md-offset slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>İLETİŞİM</h1>
                                <h2><span><a href="@Url.Action("Index","Home")">Anasayfa</a> | İletişim</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="colorlib-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 animate-box">
                <h2>İletişim Bilgileri</h2>
                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-info-wrap-flex">
                            <div class="con-info">
                                <p><span><i class="glyphicon glyphicon-home"></i></span> Yunus Emre Caddesi No:69 <br> PK:06010 Keçiören/Ankara</p>
                            </div>
                            <div class="con-info">
                                <p><span><i class="glyphicon glyphicon-earphone"></i></span> <a href="tel://0536 320 96 26">0 536 320 96 26</a></p>
                            </div>
                            <div class="con-info" style="padding-left:20px">
                                <p><span><i class="glyphicon glyphicon-envelope"></i></span> <a href="mailto:info@yoursite.com">info@fitt4free.com</a></p>
                            </div>
                            <div class="con-info">
                                <p><span><i class="glyphicon glyphicon-globe"></i></span> <a href="@Url.Action("Index","Home")">fitt4free.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 col-md-offset-1 animate-box">
                <h2>Bize Ulaşın </h2>
                @using (Html.BeginForm("Iletisim", "Home", FormMethod.Post))
                {
                    <div class="row form-group">
                        <div class="col-md-6">
                            <!-- <label for="fname">First Name</label> -->
                            <input type="text" id="ad" name="ad" class="form-control" placeholder="Ad" autocomplete="off">
                        </div>
                        <div class="col-md-6">
                            <!-- <label for="lname">Last Name</label> -->
                            <input type="text" id="soyad" name="soyad" class="form-control" placeholder="Soyad" autocomplete="off">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="email">Email</label> -->
                            <input type="text" id="mail" name="mail" class="form-control" placeholder="E-Mail" autocomplete="off">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="subject">Subject</label> -->
                            <input type="text" id="konu" name="konu" class="form-control" placeholder="Konu" autocomplete="off">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="message">Message</label> -->
                            <textarea name="mesaj" id="mesaj" cols="30" rows="10" class="form-control" placeholder="Bize İletmek İsteğiniz Mesajınız"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary">
                    </div>
                }
                @if(TempData["sonuc"]!=null)
                {
                    <div class="alert alert-success">@TempData["sonuc"]</div>
                }
                </div>
        </div>
    </div>
</div>
<script>
    function mesaj() {  
      document.getElementById("mesaj").innerHTML = "Kayıt Başarılı Şekilde Yapıldı";
    }
</script>

